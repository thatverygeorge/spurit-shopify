{% comment %}theme-check-disable UndefinedObject{% endcomment %}

<div class='order-details-form__input-wrapper'>
  <input
    class='order-details-form__input-{{ option.name | downcase }} order-details-form__input-{{ option.name | downcase }}--{{ value | downcase }} visually-hidden'
    type='radio'
    name='options[{{ option.name | escape }}]'
    id='{{ option.name | downcase }}-{{ value | downcase }}'
    value='{{ value | escape }}'
    {% if option.selected_value == value %}
      checked
    {% endif %}
  >
  <label for='{{ option.name | downcase }}-{{ value | downcase }}'>
    <span class='visually-hidden'>{{ option.name | downcase }}: {{ value | downcase }}</span>
  </label>
  <span
    class='tooltip order-details-form__tooltip-{{ option.name | downcase }}'
    aria-hidden='true'
  >
    {{ value | capitalize }} latte
  </span>
</div>
