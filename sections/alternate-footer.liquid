<footer class="footer">
  <div class="footer__wrapper">
    {%- assign about_blocks = section.blocks | where: "type", "footer_about" -%}
    {%- if about_blocks.size > 0 -%}
      {%- for block in about_blocks -%}
        <div class="footer__section-wrapper">
          <h2 class="footer__heading">{{ block.settings.footer_about_heading }}</h2>
          <address class="footer__store-info">
            {{ block.settings.footer_about_text }}
          </address>
          <ul
            class="social-links footer__social-links"
            role="list"
            aria-label="social links"
          >
            <li class="social-links__item social-links__item--facebook">
              <a
                href="{{ block.settings.footer_about_facebook_link }}"
                target="_blank"
              >
                <span class="visually-hidden">our facebook page — opens in a new tab</span>
              </a>
            </li>
            <li class="social-links__item social-links__item--instagram">
              <a href="{{ block.settings.footer_about_instagram_link }}" target="_blank">
                <span class="visually-hidden">our instagram page — opens in a new tab</span>
              </a>
            </li>
          </ul>
          <small class="footer__copyright">{{ block.settings.footer_about_copyright }}</small>
        </div>
      {%- endfor -%}
    {%- endif -%}

    {%- assign menu_blocks = section.blocks | where: "type", "footer_menu" -%}
    {%- if menu_blocks.size > 0 -%}
      {%- for block in menu_blocks -%}
        <div class="footer__section-wrapper">
          <h2 class="footer__heading">{{ block.settings.footer_menu_heading }}</h2>
          <ul
            class="footer-navigation-list footer__navigation-list"
            role="list"
          >
            {%- for link in block.settings.footer_menu_link_list.links -%}
              <li class="footer-navigation-list__item">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</footer>

{% schema %}
{
  "name": "Alternate footer",
  "max_blocks": 4,
  "settings": [],
  "blocks": [
    {
      "name": "About",
      "type": "footer_about",
      "settings": [
        {
          "type": "text",
          "id": "footer_about_heading",
          "label": "Heading",
          "default": "About"
        },
        {
          "type": "richtext",
          "id": "footer_about_text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "footer_about_facebook_link",
          "label": "Facebook link",
          "default": "Facebook"
        },
        {
          "type": "text",
          "id": "footer_about_instagram_link",
          "label": "Instagram link",
          "default": "Instagram"
        },
        {
          "type": "text",
          "id": "footer_about_copyright",
          "label": "Copyright",
          "default": "© Susparsa 2021"
        }
      ]
    },
    {
      "name": "Menu",
      "type": "footer_menu",
      "settings": [
        {
          "type": "text",
          "id": "footer_menu_heading",
          "label": "Heading",
          "default": "Useful links"
        },
        {
          "type": "link_list",
          "id": "footer_menu_link_list",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}

